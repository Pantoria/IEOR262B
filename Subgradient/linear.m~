function xs = linear(A,b,c,T,slater,x0,z,kmax)
    [~,n] = size(A);
    %Transform into model program
    %i.e., x->e=ones(n,1) transform the slater point into ones
    A = A*diag(slater);
    c = diag(slater)*c;
    x = x0;
    
    %shape the objective function into max e_i^Tx
    A = [A;c'];
    b = [b;z];
    
    
    %calculate the projection matrix
    P = projection(A);
    
    %Container for all potential values
    values = zeros(kmax,1);
    xs = zeros(kmax,n);
    
    for k = 1:kmax
        switch T
            case 1
                t = 2/(k+2);
        end
        x = subgradient(A,x,t,P);
        values(k) = max(x(:));
        xs(k,:) = x;
    end
    
end

